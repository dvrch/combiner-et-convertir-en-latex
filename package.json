{
	"name": "obsidian-markdown-combiner",
	"version": "1.0.0",
	"description": "An Obsidian plugin to combine markdown files and their linked content into a single file.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && pnpm run build:esbuild",
		"build:esbuild": "node --max-old-space-size=4096 esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"svelte-check": "svelte-check --tsconfig tsconfig.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"syntax",
		"highlighter"
	],
	"author": "dvrch",
	"license": "MIT",
	"obsidian": {
		"name": "color text perso regex",
		"minAppVersion": "1.0.0",
		"isDesktopOnly": false
	},
	"devDependencies": {
		"@types/node": "^20.11.24",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.23.0",
		"esbuild-plugin-obsidian": "^0.1.0",
		"esbuild-svelte": "^0.9.3",
		"eslint": "^8.57.0",
		"obsidian": "^1.8.7",
		"svelte": "^4.0.0",
		"svelte-check": "^3.8.6",
		"svelte-preprocess": "^6.0.3",
		"tslib": "2.4.1",
		"typescript": "5.0.4"
	}
}
